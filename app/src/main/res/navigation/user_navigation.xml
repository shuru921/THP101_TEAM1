    <fragment
        android:id="@+id/meMainFragment"
        android:name="com.example.thp101_team1_bagchance.controller.me.MeMainFragment"
        android:label="fragment_me_main"
        tools:layout="@layout/activity_user" />
    <fragment
        android:id="@+id/chatMainFragment"
        android:name="com.example.thp101_team1_bagchance.controller.chat.ChatMainFragment"
        android:label="fragment_chat_main"
        tools:layout="@layout/fragment_chat_main" >
        <action
            android:id="@+id/action_chatMainFragment_to_chatRoomFragment"
            app:destination="@id/chatRoomFragment" />
